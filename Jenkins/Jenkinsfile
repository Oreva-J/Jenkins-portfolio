pipeline {
    agent any

    environment {
        DOCKER_HUB_REPO = 'nizzzy/docker-portfolio'
    }
    parameters{
        string(name: 'BRANCH_NAME', defaultValue: 'main', description: 'Branch to build')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: "${params.BRANCH_NAME}", url: 'https://github.com/Oreva-J/Jenkins-portfolio.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_HUB_REPO}:${BUILD_NUMBER}")
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                withDockerRegistry([credentialsId: 'docker-pass', url: 'https://index.docker.io/v1/']) {
                    script {
                        docker.image("${DOCKER_HUB_REPO}:${BUILD_NUMBER}").push()
                        docker.image("${DOCKER_HUB_REPO}:${BUILD_NUMBER}").push("latest")
                    }
                }
            }
        }
        stage('Deploy to EC2') {
            steps {
                script {
                    sshagent(['aws-ec2-ssh']) {
                        sh """
                            scp -o StrictHostKeyChecking=no -r manifest/ ubuntu@108.129.92.222:/home/ubuntu/manifest
                            ssh -o StrictHostKeyChecking=no ubuntu@108.129.92.222 "
                                export KUBECONFIG=/home/ubuntu/.kube/config &&
                                kubectl apply -f /home/ubuntu/manifest/namespace.yaml &&
                                kubectl apply -f /home/ubuntu/manifest/ -n dev &&
                                kubectl set image deployment/portfolio-deployment portfolio=${DOCKER_HUB_REPO}:${BUILD_NUMBER} -n dev &&
                                kubectl rollout status deployment/portfolio-deployment -n dev
                            "
                        """
                    }
                }
            }
        }
    }
}
